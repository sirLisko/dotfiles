# Shortcuts
alias dl="cd ~/Downloads"
alias dt="cd ~/Desktop"
alias p="cd ~/projects"
alias rm="trash"

# git
alias s="git status"
alias c="git commit -m"
alias ci="git commit"
alias co="git checkout"
alias a="git add"
alias ca="git add . && git commit -m"
alias review='git difftool `git merge-base HEAD develop`'
alias git=hub
alias ga="git add"
alias gaa="git aa"
alias gap="git ap"
alias gbn="git checkout -b"
alias gci="git commit"
alias gca="git commit --amend --no-edit "
alias gcam="git commit --amend"
alias gco="git checkout"
alias gd="git diff"
alias gds="git diff --staged"
alias gl="git log --pretty=format:\"%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset\" --abbrev-commit"
alias gpu="git push"
alias gpuf="git push --force-with-lease"
alias grm="git rm"
alias grh="git reset HEAD"
alias gs="git stash"
alias gsa="git stash apply"
alias gsl="git stash list"
alias gsp="git stash pop"
alias gski="git stash --keep-index"
alias gr="git rebase"
alias gri="git rebase --interactive"
alias grc="git rebase --continue"
alias gra="git rebase --abort"
alias grs="git rebase --skip"
alias gres="git restore --staged"
alias gpl="git pull"
alias gplf='git reset --hard origin/`git rev-parse --abbrev-ref HEAD`'
alias gclean="git branch --merged | grep -Ev 'master$|^\*.*$' | xargs git branch -d"
alias gbclean="git removed-branches --prune -f"

# npm
alias ni="npm install"
alias nis="npm install --save"
alias nisd="npm install --save-dev"
alias nig="npm install -g"
alias nl="npm link"
alias nr="npm run"
alias nd="npm run dev"
alias ns="npm start"
alias nt="npm test"
alias ntw="npm test -- --watch"
alias ntc="npm test -- --coverage"
alias nu="npm uninstall"
alias nug="npm uninstall -g"

# pnpm
alias p="pnpm"
alias pi="pnpm install"
alias pis="pnpm install --save"
alias pisd="pnpm install --save-dev"
alias pig="pnpm install -g"
alias pl="pnpm link"
alias pr="pnpm run"
alias pd="pnpm run dev"
alias pst="pnpm start"
alias pt="pnpm test"
alias ptw="pnpm test -- --watch"
alias ptc="pnpm test -- --coverage"
alias pu="pnpm uninstall"
alias pug="pnpm uninstall -g"

# OSX
# Show/hide hidden files in Finder
alias show="defaults write com.apple.finder AppleShowAllFiles -bool true && killall Finder"
alias hide="defaults write com.apple.finder AppleShowAllFiles -bool false && killall Finder"
# Starts ios simulator
alias ios="open /Applications/Xcode.app/Contents/Developer/Applications/Simulator.app"

# IP addresses
alias ip="dig +short myip.opendns.com @resolver1.opendns.com"
alias localip="ipconfig getifaddr en0"
alias ips="ifconfig -a | grep -o 'inet6\? \(addr:\)\?\s\?\(\(\([0-9]\+\.\)\{3\}[0-9]\+\)\|[a-fA-F0-9:]\+\)' | awk '{ sub(/inet6? (addr:)? ?/, \"\"); print }'"

# command improved
alias cat="bat"

# various
alias h="less ~/dotfiles/zsh/aliases"
alias srcz="source ~/.zshrc"
